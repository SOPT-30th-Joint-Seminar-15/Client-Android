<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.zyoung.CreateActivity">

    <include
        android:id="@+id/include"
        layout="@layout/inquiry_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_create_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/notosanskr_medium"
                android:lineHeight="27dp"
                android:text="@string/create_title"
                android:textColor="@color/black01_29cm"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_create_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="27dp"
                android:fontFamily="@font/notosanskr_regular"
                android:lineHeight="24dp"
                android:text="@string/create_description"
                android:textColor="@color/grey01_29cm"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_create_title" />

            <View
                android:id="@+id/view_create_divisor1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv_create_description" />

            <TextView
                android:id="@+id/tv_create_purchaseinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/notosanskr_medium"
                android:lineHeight="27dp"
                android:text="@string/create_purchasetitle"
                android:textColor="@color/black02_29cm"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_create_divisor1" />

            <RadioGroup
                android:id="@+id/radiogroup1_create_purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="14dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_create_purchaseinfo">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radiobutton_create_delivery"
                        android:layout_width="0dp"
                        android:layout_height="19dp"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableStart="@drawable/create_radiobutton_background"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:text="@string/create_purchasedelivery"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toStartOf="@id/radiobutton_create_order"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioButton
                        android:id="@+id/radiobutton_create_order"
                        android:layout_width="0dp"
                        android:layout_height="19dp"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableStart="@drawable/create_radiobutton_background"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:text="@string/create_purchaseorder"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toStartOf="@id/radiobutton_create_cancel"
                        app:layout_constraintStart_toEndOf="@id/radiobutton_create_delivery"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioButton
                        android:id="@+id/radiobutton_create_cancel"
                        android:layout_width="0dp"
                        android:layout_height="19dp"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableStart="@drawable/create_radiobutton_background"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:text="@string/create_purchasecancel"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/radiobutton_create_order"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintlayout_create_radio2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp">

                    <RadioButton
                        android:id="@+id/radiobutton_create_return"
                        android:layout_width="0dp"
                        android:layout_height="19dp"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableStart="@drawable/create_radiobutton_background"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:text="@string/create_purchasereturn"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toStartOf="@+id/radiobutton_create_exchange"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioButton
                        android:id="@+id/radiobutton_create_exchange"
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableStart="@drawable/create_radiobutton_background"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:text="@string/create_purchaseexchange"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toStartOf="@+id/radiobutton_create_refund"
                        app:layout_constraintStart_toEndOf="@+id/radiobutton_create_return"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioButton
                        android:id="@+id/radiobutton_create_refund"
                        android:layout_width="0dp"
                        android:layout_height="19dp"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableStart="@drawable/create_radiobutton_background"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:text="@string/create_purchaserefund"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/radiobutton_create_exchange"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp">

                    <RadioButton
                        android:id="@+id/radiobutton_create_gift"
                        android:layout_width="0dp"
                        android:layout_height="19dp"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableStart="@drawable/create_radiobutton_background"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:text="@string/create_purchasegift"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toStartOf="@+id/radiobutton_create_deposit"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioButton
                        android:id="@+id/radiobutton_create_deposit"
                        android:layout_width="0dp"
                        android:layout_height="19dp"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableStart="@drawable/create_radiobutton_background"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:text="@string/create_purchasedeposit"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toStartOf="@+id/view_create_unseen"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/radiobutton_create_gift"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view_create_unseen"
                        android:layout_width="0dp"
                        android:layout_height="19dp"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableStart="@drawable/create_radiobutton_background"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:text="@string/create_purchasedeposit"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/radiobutton_create_deposit"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </RadioGroup>

            <View
                android:id="@+id/view_create_divisor2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="31dp"
                android:background="@color/line_grey_29cm"
                app:layout_constraintTop_toBottomOf="@id/radiogroup1_create_purchase" />

            <TextView
                android:id="@+id/tv_create_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/notosanskr_medium"
                android:lineHeight="27dp"
                android:text="@string/create_defaulttitle"
                android:textColor="@color/black02_29cm"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_create_divisor2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_create_defaultradio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_create_default">

                <RadioButton
                    android:id="@+id/radiobutton_create_userinfo"
                    android:layout_width="0dp"
                    android:layout_height="19dp"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableStart="@drawable/create_radiobutton_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="@string/create_defaultuserinfo"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toStartOf="@+id/radiobutton_create_userrule"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioButton
                    android:id="@+id/radiobutton_create_userrule"
                    android:layout_width="0dp"
                    android:layout_height="19dp"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableStart="@drawable/create_radiobutton_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="@string/create_defaultuserrule"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toStartOf="@+id/radiobutton_create_purchaseinfo"
                    app:layout_constraintStart_toEndOf="@+id/radiobutton_create_userinfo"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioButton
                    android:id="@+id/radiobutton_create_purchaseinfo"
                    android:layout_width="0dp"
                    android:layout_height="19dp"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableStart="@drawable/create_radiobutton_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="@string/create_defaultpurchaseinfo"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/radiobutton_create_userrule"
                    app:layout_constraintTop_toTopOf="parent" />


                <RadioButton
                    android:id="@+id/radiobutton_create_item"
                    android:layout_width="0dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="18dp"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableStart="@drawable/create_radiobutton_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="@string/create_defaultitem"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toStartOf="@id/radiobutton_create_chosen"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/radiobutton_create_userinfo" />

                <RadioButton
                    android:id="@+id/radiobutton_create_chosen"
                    android:layout_width="0dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="18dp"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableStart="@drawable/create_radiobutton_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="@string/create_defaultchosen"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@id/radiobutton_create_coupon"
                    app:layout_constraintStart_toEndOf="@id/radiobutton_create_item"
                    app:layout_constraintTop_toBottomOf="@id/radiobutton_create_userrule" />

                <RadioButton
                    android:id="@+id/radiobutton_create_coupon"
                    android:layout_width="0dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="18dp"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableStart="@drawable/create_radiobutton_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="@string/create_defaultcoupon"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/radiobutton_create_chosen"
                    app:layout_constraintTop_toBottomOf="@id/radiobutton_create_purchaseinfo" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_create_divisor3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="33dp"
                android:background="@color/line_grey_29cm"
                app:layout_constraintTop_toBottomOf="@id/constraintlayout_create_defaultradio" />

            <TextView
                android:id="@+id/tv_create_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/notosanskr_medium"
                android:lineHeight="27dp"
                android:text="@string/create_etctitle"
                android:textColor="@color/black02_29cm"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_create_divisor3" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_create_etcradio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/tv_create_etc">

                <RadioButton
                    android:id="@+id/radiobutton_create_system"
                    android:layout_width="0dp"
                    android:layout_height="19dp"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableStart="@drawable/create_radiobutton_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="@string/create_etcsystem"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toStartOf="@id/radiobutton_create_etc"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioButton
                    android:id="@+id/radiobutton_create_etc"
                    android:layout_width="0dp"
                    android:layout_height="19dp"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableStart="@drawable/create_radiobutton_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="@string/create_etcetc"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toStartOf="@id/radiobutton_create_document"
                    app:layout_constraintStart_toEndOf="@id/radiobutton_create_system"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioButton
                    android:id="@+id/radiobutton_create_document"
                    android:layout_width="0dp"
                    android:layout_height="19dp"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableStart="@drawable/create_radiobutton_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="@string/create_etcdocument"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/radiobutton_create_etc"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_create_divisor4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="29dp"
                android:background="@color/line_grey_29cm"
                app:layout_constraintTop_toBottomOf="@id/constraintlayout_create_etcradio" />

            <!--            visibility gone으로 설정해주기 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_create_orderinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/view_create_divisor4">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintlayout_create_orderinfo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="25dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_ordernumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:lineHeight="27dp"
                        android:text="@string/create_ordernumber"
                        android:textColor="@color/black02_29cm"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/et_create_ordernumber"
                        android:layout_width="0dp"
                        android:layout_height="43dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/create_edittext_custom"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:textSize="12sp"
                        android:focusableInTouchMode="false"
                        app:layout_constraintEnd_toStartOf="@id/button_create_ordernumber"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_ordernumber" />

                    <Button
                        android:id="@+id/button_create_ordernumber"
                        android:layout_width="71dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/create_button_custom"
                        android:text="@string/create_ordernumber"
                        android:textColor="@color/grey01_29cm"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/et_create_ordernumber"
                        app:layout_constraintTop_toBottomOf="@id/tv_ordernumber" />

                    <TextView
                    android:id="@+id/tv_create_itemname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/notosanskr_medium"
                    android:lineHeight="27dp"
                    android:text="@string/create_itemname"
                    android:textColor="@color/black02_29cm"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_create_ordernumber" />

                    <TextView
                        android:id="@+id/tv_create_orderitemname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:lineHeight="27dp"
                        tools:text="@string/create_itemname"
                        android:textColor="@color/black02_29cm"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_create_itemname" />

                    <TextView
                        android:id="@+id/tv_create_orderdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/notosanskr_medium"
                        android:lineHeight="27dp"
                        android:text="@string/create_orderdate"
                        android:textColor="@color/black02_29cm"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_create_orderitemname" />

                    <TextView
                        android:id="@+id/tv_create_orderitemdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:lineHeight="27dp"
                        tools:text="@string/create_orderdate"
                        android:textColor="@color/black02_29cm"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_create_orderdate" />

                    <TextView
                        android:id="@+id/tv_create_purchasemethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/notosanskr_medium"
                        android:lineHeight="27dp"
                        android:text="@string/create_purchasemethod"
                        android:textColor="@color/black02_29cm"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_create_orderitemdate" />

                    <TextView
                        android:id="@+id/tv_create_orderpurchasemethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:lineHeight="27dp"
                        tools:text="@string/create_purchasemethod"
                        android:textColor="@color/black02_29cm"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_create_purchasemethod" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view_create_divisor5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="21dp"
                    android:background="@color/line_grey_29cm"
                    app:layout_constraintTop_toBottomOf="@id/constraintlayout_create_orderinfo2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_create_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/constraintlayout_create_orderinfo">

                <TextView
                    android:id="@+id/tv_create_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
